<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rainbow">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="OUR STORY"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="57dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:paddingLeft="50dip"
            android:textColor="#000000"
            android:paddingRight="50dip"
            android:gravity="center"
            android:text="We are a group of students that study in Universiti Malaysia Sabah (UMS). Kadazan-dusun is a unique ethnic in Sabah Malaysia. We created this application to help those that are interested in learning more about Kadazan-dusun culture and language."
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:text="CONTACT US"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView17"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="Our team consists of five people which are: \n Lim Fong Way\nLiew Jun Yip\nAng Iye Szin\nKok Khong Wei\n Nur Azriena Azreen Bt Abd Rashid"
            android:layout_below="@+id/textView18"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView19"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:layout_marginTop="28dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Email: kadusApps@gmail.com" />


    </RelativeLayout>

</ScrollView>
