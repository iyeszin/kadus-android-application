<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woodbackground"
    >

    <EditText
        android:id="@+id/ChosenWord"
        android:layout_width="150dp"
        android:layout_height="84dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:hint="Type here"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="71dp"
        android:layout_below="@+id/WordDefine"
        android:layout_alignLeft="@+id/WordDefine"
        android:layout_alignStart="@+id/WordDefine" />

    <TextView
        android:id="@+id/TranslateWord"
        android:layout_width="150dp"
        android:layout_height="84dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textColor="#000000"
        android:textAlignment="gravity"
        android:gravity="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="71dp"
        android:layout_above="@+id/Translate"
        android:layout_alignRight="@+id/WordTranslate"
        android:layout_alignEnd="@+id/WordTranslate"
        android:layout_alignTop="@+id/ChosenWord" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="344dp"
        android:layout_height="85dp"
        android:text="Description"
        android:gravity="center"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="353dp"
        android:layout_below="@+id/Meaning"
        android:textColor="#999999"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/Meaning"
        android:layout_width="140dp"
        android:layout_height="36dp"
        android:text="Meaning"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="314dp"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/Translate"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/WordDefine"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteY="235dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Translate"
        android:layout_alignStart="@+id/Translate" />

    <Spinner
        android:id="@+id/WordTranslate"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="235dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/Translate"
        android:layout_alignEnd="@+id/Translate" />

    <Button
        android:id="@+id/Translate"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshapetranslate"
        android:layout_marginTop="99dp"
        android:text="Translate"
        android:textSize="20dp"
        android:layout_below="@+id/ChosenWord"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="to"
        android:textColor="#000000"
        android:textSize="15dp"/>


</RelativeLayout>

