<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBF5D">


    <android.support.v4.view.ViewPager
        android:id="@+id/pagerView"
        android:layout_width="368dp"
        android:layout_height="222dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"></android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/textHistoryLabel_1"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Kadazan People"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:layout_below="@+id/pagerView"
        android:layout_marginBottom="15dp"/>


    <TextView
        android:id="@+id/textHistory"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        android:layout_below="@+id/textHistoryLabel_1"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_below="@+id/textHistory"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/sabahmapculture"
        />


    <TextView
        android:id="@+id/textHistoryLabel_2"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Location"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="#000000"
        android:layout_below="@+id/imageView2"/>

    <TextView
        android:id="@+id/textLocation"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        android:layout_below="@+id/textHistoryLabel_2"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_below="@+id/textLocation"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/sumazau_dance"
        />

    <TextView
        android:id="@+id/textHistoryLabel_3"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Music and Dance"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="#000000"
        android:layout_below="@+id/imageView3"/>

    <TextView
        android:id="@+id/textMusicDance"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        android:layout_below="@+id/textHistoryLabel_3"/>


</RelativeLayout>

</ScrollView>